<!DOCTYPE html>
<html lang="en">

<%- include ('components/head.ejs', {title: "Warzywniak - strona główna" , style: "index.css" }) %>

    <body>
        <% if (locals.logged && locals.role==='admin' ) { %>
            <%- include ('components/adminPanel.ejs') %>
                <%} else if (locals.logged) { %>
                    <%- include ('components/userPanel.ejs') %>
                        <% } else {%>
                            <%- include ('components/defaultPanel.ejs') %>
                                <%} %>

                                    <%- include ('components/header.ejs')%>
                                        <%- include ('components/searchBar.ejs') %>

                                            <main class="goods__panel">
                                                <% for (let i=0; i<products.length; i++) { %>
                                                    <div class="panel__item good">
                                                        <span class="good__name">
                                                            <%= products[i].name%>
                                                        </span>
                                                        <span class="good__price">
                                                            <%= products[i].price%>
                                                        </span>
                                                        <span class="good__description">
                                                            <%= products[i].description%>
                                                        </span>
                                                        <% if (locals.logged) { %>
                                                            <div class="basket__wrapper">
                                                                <label class="basket__item basket__label"
                                                                    for="basket">Dodaj do koszyka</label>
                                                                <button><a href=<%="/basket/" + products[i].name%>><img
                                                                            class="basket__item basket"
                                                                            src="../images/basket.png"
                                                                            id="basket"></a></button>
                                                            </div>
                                                            <% } %>
                                                    </div>
                                                    <% } %>
                                            </main>

                                            <%- include ('components/footer.ejs') %>
    </body>

</html>