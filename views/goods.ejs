<!DOCTYPE html>
<html lang="en">

<%- include ('components/head.ejs', {title: "Warzywniak: Administrator - towary" , style: 'adminGoods.css' })%>

    <body>
        <%- include('components/adminPanel.ejs') %>

            <%- include ('components/header.ejs')%>

                <main class="goods__panel">
                    <% for (let i=0; i<products.length; i++) { %>
                        <div class="panel__item good">
                            <span class="good__name">
                                <%= products[i].name%>
                            </span>
                            <span class="good__price">
                                <%= products[i].price%>
                            </span>
                            <span class="good__description">
                                <%= products[i].description%>
                            </span>
                            <a href=<%="/changeGood/" + products[i].name%>>Zmień</a>
                            <form method="POST" action=<%="/admin/products/" + products[i].name %>>
                                <button type="submit">Usuń</button>
                            </form>
                        </div>
                        <% } %>
                            <a href="/addGood">Dodaj produkt</a>
                </main>
                <%- include ('components/footer.ejs') %>
    </body>

</html>