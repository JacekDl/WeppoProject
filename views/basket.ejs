<!DOCTYPE html>
<html lang="en">

<%- include ('components/head.ejs', {title: "Warzywniak: Koszyk" , style: "basket.css" })%>

    <body>
        <% if (locals.role==='admin' ) { %>
            <%- include ('components/adminPanel.ejs', {style: "panel.css" }) %>
                <%} else { %>
                    <%- include ('components/userPanel.ejs', {style: "panel.css" }) %>
                        <%} %>

                            <%- include ('components/header.ejs', {style: "header.css" })%>
                                <%- include ('components/searchBar.ejs', {style: "searchBar.css" }) %>

                                    <main class="goods__panel">
                                        <% for (let i=0; i<products.length; i++) { %>
                                            <div class="panel__item good">
                                                <span class="good__name">
                                                    <%= products[i].name%>
                                                </span>
                                                <span class="good__price">
                                                    <%= products[i].price%>
                                                </span>
                                                <span class="good__description">
                                                    <%= products[i].description%>
                                                </span>
                                            </div>
                                            <% } %>

                                                <div>
                                                    <span>
                                                        <%="Suma:" + total %>
                                                    </span>
                                                    <a href="/checkout">Złóż zamówienie</a>
                                                </div>
                                    </main>
                                    <%- include ('components/footer.ejs', {style: "footer.css" }) %>
    </body>

</html>